<UserControl x:Class="Excel_POC.TaskPane.HomeTaskPane" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Excel_POC.TaskPane"
        mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="Serialized Chart Data" FontSize="16" FontWeight="Bold" Margin="10" />
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10,40,10,60">
            <TextBox x:Name="SerializedDataTextBox" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch" IsReadOnly="True" />
        </ScrollViewer>
        <Button Content="Submit Chart Data" Width="150" Height="30" Margin="10" VerticalAlignment="Bottom"
                HorizontalAlignment="Center" Background="#0078D7" Foreground="White" FontWeight="Bold"
                BorderBrush="#005A9E" Cursor="Hand" Click="SubmitChartDataButton_Click" />
    </Grid>
</UserControl>
